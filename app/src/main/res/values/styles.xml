    <style name="round_corner_button_style" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/blackApp</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

