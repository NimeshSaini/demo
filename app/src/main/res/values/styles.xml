<resources>

    <!-- Base application theme. -->
    <style name="AppThemeOwn" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/blackApp</item>
        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
        <item name="colorButtonNormal">@color/blackApp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="actionMenuTextColor">@color/blackApp</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemPadding">15dp</item>
        <item name="android:listPreferredItemHeightSmall">200dp</item>


    </style>


    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="ReadActionBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorActionBarText</item>
        <item name="android:textColorSecondary">@color/colorActionBarText</item>
        <item name="actionMenuTextColor">@color/colorActionBarText</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>


    </style>



    <style name="TransparentDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@android:color/transparent</item>

    </style>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="itemTextColor">@color/blackApp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="ToolbarTexAppearance">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="color">@color/blackApp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/colorActionBarText</item>
        <item name="android:textColorSecondary">@color/colorActionBarText</item>
        <item name="actionMenuTextColor">@color/colorActionBarText</item>
        <item name="android:background">@color/new_ui_yellow</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="MyDialogCalculator" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="ToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/blackApp</item>
        <item name="android:textColorPrimary">@color/blackApp</item>
        <item name="actionMenuTextColor">@color/blackApp</item>
        <item name="android:textColorSecondary">@color/blackApp</item>
    </style>

    <style name="LoginActionBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorActionBarText</item>
        <item name="android:textColorSecondary">@color/colorActionBarText</item>
        <item name="actionMenuTextColor">@color/colorActionBarText</item>
        <item name="android:background">@color/new_ui_yellow</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:drawablePadding">5dp</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- Base application theme. -->

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="customThemeForSigninActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/signin</item>
        <item name="colorPrimary">@color/signin</item>
        <item name="colorAccent">@color/signin</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:statusBarColor">@color/signin</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="TextInputLayoutHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/blackApp</item>
        <item name="android:textSize">@dimen/small_text_size2</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

