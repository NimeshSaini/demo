    <style name="PlayerTheme" parent="AppThemeOwn">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppThemeOwn">
        <item name="elevation">4dp</item>
        <item name="android:textColorPrimary">@color/blackApp</item>
        <item name="colorControlNormal">@color/blackApp</item>
    </style>


    <style name="videosheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/videosheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="videosheetDialogTheme" parent="videosheetDialog" />


    <style name="PauseDialogAnimation">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="videosheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/video_round_corner</item>
    </style>


    <style name="Custom.Searching" parent="AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/blackApp</item>
        <item name="android:textColorHint">#60000000</item>
        <item name="colorControlActivated">@color/blackApp</item>
        <item name="colorControlHighlight">@color/blackApp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>


