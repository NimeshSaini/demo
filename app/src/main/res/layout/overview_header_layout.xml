<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/signInUpLayout"
        android:padding="1dp"
        android:background="@drawable/round_corner_border_layout"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/engTextView"
            android:layout_weight="1"
            android:background="@drawable/round_black_bg"
            android:text="@string/english"
            android:gravity="center"
            android:textColor="@color/blackApp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        </TextView>

        <TextView
            android:id="@+id/hindiTextView"
            android:layout_weight="1"
            android:background="@drawable/round_white_bg"
            android:textColor="@color/black_overlay"
            android:text="@string/hindi"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookidLL"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Code:"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp4"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/courseid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="1234"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleOneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IBPS SO Test Series"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:maxLines="1"
            android:fontFamily="@font/inter_semibold"/>

        <WebView
            android:id="@+id/descriptionOneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:scrollbars="none"
            tools:ignore="WebViewLayout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:id="@+id/ceoOneLL"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size"
            android:ellipsize="end"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:maxLines="1"
            android:fontFamily="@font/inter_semibold"/>

        <WebView
            android:id="@+id/ceoTwoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:scrollbars="none"
            tools:ignore="WebViewLayout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:id="@+id/relatedCoursesLL"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Related Courses"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:maxLines="1"
            android:fontFamily="@font/inter_semibold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/relatedCoursesRv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>