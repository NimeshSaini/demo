<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calcpagerl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp15"
    android:background="@drawable/round_bg_address">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp10"
        android:src="@mipmap/cancel"/>

    <TextView
        android:id="@+id/add_deleivery_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:fontFamily="@font/inter_bold"
        android:text="Delivery Address"
        android:textColor="@color/color_071E57"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_below="@id/add_deleivery_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="@color/black"/>


    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_submit"
        android:layout_below="@id/view1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/dp20">


            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="Name *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtname"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/border_edit_address"
                android:hint="Enter Name here"
                android:maxLines="1"
                android:padding="@dimen/dp14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />


            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="Address Line 1 *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/border_edit_address"
                android:hint="Enter Address1 here"
                android:maxLines="1"
                android:padding="@dimen/dp14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="Address Line 2 "
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/border_edit_address"
                android:ellipsize="end"
                android:hint="Enter Address2 here"
                android:maxLines="1"
                android:padding="@dimen/dp14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/txtstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="State *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_below="@id/txtstate"
                android:id="@+id/layput_state"
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@drawable/border_edit_address"
                    android:ellipsize="end"
                    android:hint="Select State here"
                    android:maxLines="1"
                    android:padding="@dimen/dp14"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13" />

                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:src="@drawable/ibt_drop_down"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layput_state"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="City *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_below="@id/txtcity"
                android:id="@+id/layout_city"
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@drawable/border_edit_address"
                    android:ellipsize="end"
                    android:hint="Enter City here"
                    android:maxLines="1"
                    android:padding="@dimen/dp14"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13" />

                <ImageView
                    android:id="@+id/downarrowIV"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:src="@drawable/ibt_drop_down"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtpincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_city"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="Pincode *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpincode"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/border_edit_address"
                android:ellipsize="end"
                android:hint="Enter Pincode here"
                android:inputType="number"
                android:maxLength="6"

                android:maxLines="1"
                android:padding="@dimen/dp14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/txtmno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pincode"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:text="Alternate Phone Number *"
                android:textColor="#8A000000"
                android:textSize="10sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtmno"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/border_edit_address"
                android:ellipsize="end"
                android:hint="Enter Mobile here"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/dp14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/dp180"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:layout_weight="1"
        android:background="@drawable/round_black_bg"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@color/black_405461"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />


</RelativeLayout>