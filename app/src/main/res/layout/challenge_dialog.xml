<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/challenge_background">


     <ImageView
         android:id="@+id/txt_resume"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="end"
         android:backgroundTint="@color/black"
         android:layout_marginEnd="@dimen/dp2"
         android:src="@drawable/close"
         android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#7299e6"
        android:lineSpacingExtra="6sp"
        android:text="Challenge"
        android:layout_gravity="center_horizontal"
       />
    <LinearLayout
        android:id="@+id/layout_fileAttach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/attach_corder"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/attach"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"/>


        <TextView
            android:id="@+id/txt_tapAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"

            android:textColor="@color/gray"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3sp"
            android:text="Add To Doc"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_fileDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:background="@drawable/challenge_imgesetborder"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_fileAttached"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/challenge_image_icon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/img_fileAttached"
            android:layout_toStartOf="@id/img_crossFile"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/txt_fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"

                android:textColor="@color/gray"
                android:letterSpacing="0.03"
                android:text="wnnfoieifni"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:layout_marginStart="15dp"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_fileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2sp"

                android:textSize="9sp"
                android:textColor="@color/black"
                android:lines="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_crossFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_marginEnd="8dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/dp10">

        <EditText
            android:id="@+id/edit_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:background="@drawable/img_border"
            android:hint="write Query"
            android:maxLength="500"
            android:inputType="textCapWords"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:lineSpacingExtra="2sp"
            android:letterSpacing="0.03"
            android:textSize="12sp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="start|top"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:background="@drawable/ibt_current_affair_gradient_blue"
        android:gravity="center"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>