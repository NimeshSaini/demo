<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andorid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/ibt_single_sub_vd_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp8"
        android:outlineAmbientShadowColor="@color/gray_dark2"
        android:outlineSpotShadowColor="@color/gray_dark2"
        android:padding="@dimen/dp3"
        app:cardBackgroundColor="@color/background_all_Lite"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp4">

        <RelativeLayout
            android:id="@+id/study_single_itemLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/imageRL"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:padding="@dimen/dp5">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/dp10"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:src="@mipmap/course_placeholder" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp4"
                            android:background="@drawable/rectangle_yello"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:visibility="gone" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout_fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/rl"
                android:layout_marginLeft="@dimen/dp8"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/watch_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="WATCH"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/listne_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toEndOf="@id/watch_now"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="LISTEN"

                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/share"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp4"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="SHARE"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/read_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toEndOf="@id/listne_now"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="READ"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/attemptLL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp4"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:text="@string/attempt_now"
                        android:textColor="@color/blackApp"
                        android:textSize="@dimen/small_text_size2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/learn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toEndOf="@id/attemptLL"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="LEARN"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/small_text_size2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/practice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toEndOf="@id/learn"
                    android:background="@drawable/border_test_attampt"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="PRACTICE"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/small_text_size2"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_toRightOf="@+id/imageRL"
                android:minHeight="@dimen/dp70">

                <TextView
                    android:id="@+id/examPrepTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_toStartOf="@id/optionMenuImgView"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:maxLines="3"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/subItemRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/examPrepTitleTV"
                    android:layout_toStartOf="@id/optionMenuImgView"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/extrasmall_text_size_12" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/optionMenuImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:scaleType="center"
                    android:visibility="gone"
                    andorid:src="@drawable/ic_menu_download" />

                <RelativeLayout
                    android:id="@+id/lockRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="@dimen/dp3"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/gray_lock" />

                </RelativeLayout>
            </RelativeLayout>


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/liveIV"
                android:layout_toEndOf="@id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/lockRL"
                android:padding="@dimen/dp5"
                android:src="@mipmap/live"
                android:visibility="visible"
                andorid:ignore="NotSibling" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--<TextView
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:minHeight="@dimen/dp200"
        android:text="No Data found"
        android:textColor="@color/black"
        android:visibility="gone" />-->

    <include layout="@layout/no_data_found" />

</RelativeLayout>