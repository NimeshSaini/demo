<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp4"
    android:paddingBottom="@dimen/dp4"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="7.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textStyle="bold"
                android:id="@+id/title"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/blackApp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/desc"
                android:textSize="@dimen/extrasmall_text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/status_ll"
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/text_status"
                android:textColor="@color/dot_white"
                android:background="@drawable/button_background_status_pending"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textSize="@dimen/extramini_extrasmall_text_size" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/next_payment_txt"
        android:text="@string/next_payment"
        android:gravity="center"
        android:textColor="@color/app_bg"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginBottom="@dimen/dp2"
        android:textSize="@dimen/small_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>