<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tileRL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:padding="@dimen/dp4"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/videoplayerRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ibt_single_vd_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_outline"
                android:scaleType="fitXY"
                android:src="@mipmap/book_placeholder" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/liveIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp2"
                android:scaleType="fitXY"
                android:src="@mipmap/live"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkIV"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:src="@mipmap/check_def"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:minLines="3"
                android:maxLines="3"
                android:text="Class XII Commerce"
                android:visibility="visible"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black_405461"
                android:textSize="@dimen/extrasmall_text_size_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>