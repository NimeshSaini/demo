<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp1"
            app:cardCornerRadius="@dimen/dp5"
            app:cardElevation="@dimen/dp5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_done"
                    android:layout_below="@+id/ibt_frag_choose_sub_exam_toolbar"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TV1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp12"
                        android:layout_marginBottom="@dimen/sp12"
                        android:alpha="0.9"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/add_note_message"
                        android:textColor="@color/black_white_text"
                        android:textSize="@dimen/sp15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp8"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/noteTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_corner_border_login_signup"
                                android:hint="Title"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingTop="@dimen/dp16"
                                android:paddingRight="@dimen/dp10"
                                android:paddingBottom="@dimen/dp16"
                                android:textSize="@dimen/post_text_size" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp16"
                        android:gravity="center"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/cancelBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp40"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/dp4"
                                android:layout_marginTop="@dimen/dp4"
                                android:layout_marginEnd="@dimen/dp4"
                                android:layout_marginBottom="@dimen/dp4"
                                android:layout_weight="1"
                                android:background="@drawable/bg_signup_btn"
                                android:padding="@dimen/dp5"
                                android:text="@string/cancel"
                                android:textAllCaps="false"
                                android:textColor="@color/blackApp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/submitBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp40"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:textAllCaps="false"
                                android:background="@drawable/bg_signup_btn"
                                android:padding="@dimen/dp5"
                                android:layout_margin="@dimen/dp4"
                                android:text="@string/submit"
                                android:textColor="@color/blackApp" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>