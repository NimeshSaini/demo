<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andorid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/ibt_single_sub_vd_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:outlineAmbientShadowColor="@color/gray_dark2"
        android:outlineSpotShadowColor="@color/gray_dark2"
        android:padding="@dimen/dp3"
        app:cardBackgroundColor="@color/background_all_Lite"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp4">

        <RelativeLayout
            android:id="@+id/study_single_itemLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50">

                    <ImageView
                        android:id="@+id/ibt_single_sub_vd_iv"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/course_placeholder" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/liveIV"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/live"
                        android:tint="@color/white"
                        android:visibility="gone" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp60"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp2"
                android:layout_toEndOf="@id/card">

                <TextView
                    android:id="@+id/ibt_single_sub_vd_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_toStartOf="@id/l1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:text="dwklvnwljdvbjkwvbwkjvbjkwvbjkwvbkjwev jkwe vjkwe vjkwe vjkwe vjwev jwqbov wqo vbvwebvujkewbvewbvwuebveiwqvbweiuvbiuwevbuivbweuviwuvvbweviwuevuiwbevuivbweviwv"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/sp12"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/durationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ibt_single_sub_vd_tv_title"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_toStartOf="@id/l1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/optionMenuImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:scaleType="center"
                    android:visibility="gone"
                    andorid:src="@drawable/ic_menu_download" />

                <RelativeLayout
                    android:id="@+id/lockRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/gray_lock" />

                </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/realte"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/data_layout"
                android:layout_marginLeft="@dimen/dp8"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/watch_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@drawable/border_test_attampt"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="WATCH"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/listne_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_toEndOf="@id/watch_now"
                    android:background="@drawable/border_test_attampt"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="LISTEN"

                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@drawable/border_test_attampt"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="SHARE"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/read_now"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_toEndOf="@id/listne_now"
                    android:background="@drawable/border_test_attampt"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="READ"
                    android:textColor="@color/blackApp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/attemptLL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@drawable/border_test_attampt"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:text="@string/attempt_now"
                        android:textColor="@color/blackApp"
                        android:textSize="@dimen/small_text_size2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/learn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_toEndOf="@id/attemptLL"
                    android:background="@drawable/border_test_attampt"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="LEARN"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/small_text_size2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/practice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_toEndOf="@id/learn"
                    android:background="@drawable/border_test_attampt"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="PRACTICE"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/small_text_size2"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>