<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:padding="@dimen/dp10"
                android:src="@drawable/back_gray" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="51dp"
                android:layout_toRightOf="@+id/iv_back"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:text="@string/verification_code"
                android:textColor="@color/blackApp"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/verify_code" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/verifyTextTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.9"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:text="@string/verify_your_one_time_otp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:text="@string/enter_code_sent"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black_405461"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/pin_hidden_edittext"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:contentDescription="@string/pin_content_desc"
                    android:cursorVisible="false"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="6"
                    android:password="true"
                    android:textColor="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/OPT1ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColorHint="@color/blackApp"

                        android:textColor="@color/blackApp"
                        android:minWidth="30dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/OPT2ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="30dp"
                        android:textColor="@color/blackApp"
                        android:textColorHint="@color/blackApp"

                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/OPT3ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/blackApp"
                        android:maxLines="1"
                        android:textColorHint="@color/blackApp"
                        android:minWidth="30dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/OPT4ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColorHint="@color/blackApp"
                        android:textColor="@color/blackApp"
                        android:minWidth="30dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/OPT5ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColorHint="@color/blackApp"
                        android:textColor="@color/blackApp"
                        android:minWidth="30dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/OPT6ET"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/round_corner_border_login_signup"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColorHint="@color/blackApp"
                        android:textColor="@color/blackApp"
                        android:minWidth="30dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/verifyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/bg_round_corners_button"
                    android:elevation="@dimen/dp5"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="@dimen/dp30"
                    android:paddingRight="@dimen/dp30"
                    android:text="@string/verfiy"
                    android:textAllCaps="false"
                    android:textColor="@color/blackApp"
                    android:textSize="@dimen/post_text_size" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp15"
                    android:drawableStart="@drawable/ic_timer"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="01:00"
                    android:textColor="@color/blue"
                    android:textSize="13dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/resendotpTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn\'t receive OTP? "
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/resendotpTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resendotp"
                        android:textColor="@color/blue"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>