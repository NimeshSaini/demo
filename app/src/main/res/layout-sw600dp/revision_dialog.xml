<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calcpagerl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_notes"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10">


    <TextView
        android:id="@+id/add_coupoun_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:gravity="center_vertical"
        android:text="Create Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black_405461"
        android:textSize="@dimen/sp19"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_below="@id/add_coupoun_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:text="Enter title here"
        android:textColor="#1A1919"
        android:textSize="@dimen/sp16" />

    <EditText
        android:id="@+id/writeCouponET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@drawable/border_edit_notes"
        android:ellipsize="end"
        android:hint="Enter title here"
        android:maxLines="2"
        android:padding="@dimen/dp18"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writeCouponET"
        android:layout_marginStart="@dimen/sp16"
        android:layout_marginTop="@dimen/sp16"
        android:layout_marginEnd="@dimen/sp16"
        android:layout_marginBottom="@dimen/sp16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn__cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_below="@id/writeCouponET"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/notes_cancel_bg"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/dp30"
            android:paddingTop="@dimen/dp5"
            android:paddingEnd="@dimen/dp30"
            android:paddingBottom="@dimen/dp5"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_below="@id/writeCouponET"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/notes_cancel_bg_fill"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/dp30"
            android:paddingTop="@dimen/dp5"
            android:paddingEnd="@dimen/dp30"
            android:paddingBottom="@dimen/dp5"
            android:text="Next"
            android:textColor="@color/black_405461"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>