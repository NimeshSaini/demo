<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">


    <ImageView
        android:id="@+id/ic_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_group"/>

    <TextView
        android:id="@+id/chose_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp30"
        android:fontFamily="@font/inter_bold"
        android:text="Choose Your Preferred Language"
        android:textColor="#122F97"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/select_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chose_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        android:fontFamily="@font/inter_regular"
        android:text="Please Select your Language"
        android:textColor="#000000"
        android:visibility="invisible"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:layout_below="@id/select_txt"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/english_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/dp20"
            android:src="@drawable/english_intro" />


        <ImageView
            android:id="@+id/hindi_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp20"
            android:src="@drawable/hindi_img" />

    </LinearLayout>




</RelativeLayout>