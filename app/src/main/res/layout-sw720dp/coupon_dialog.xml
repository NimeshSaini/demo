<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calcpagerl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_notes"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp15">


    <TextView
        android:id="@+id/add_coupoun_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_vertical"
        android:text="Add Coupon"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_below="@id/add_coupoun_txt"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_vertical"
        android:text="Enter Your Coupon Code"
        android:textColor="#1A1919"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/writeCouponET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@drawable/border_edit_notes"
        android:ellipsize="end"
        android:hint=""
        android:maxLines="2"
        android:padding="@dimen/dp15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn__cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeCouponET"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_toStartOf="@id/btn_submit"
        android:background="@drawable/bg_round_corners_button"
        android:gravity="center"
        android:paddingStart="@dimen/dp30"
        android:paddingEnd="@dimen/dp30"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeCouponET"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp6"
        android:background="@drawable/bg_round_corners_button"
        android:gravity="center"
        android:paddingStart="@dimen/dp30"
        android:paddingEnd="@dimen/dp30"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>