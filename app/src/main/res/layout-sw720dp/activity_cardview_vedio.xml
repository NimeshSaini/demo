<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp5">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp4"
        app:cardElevation="@dimen/dp6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4"
            android:background="@drawable/curved_rectangle_background_white_with_primary">

            <RelativeLayout
                android:layout_width="408dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/vedioicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp12"
                    android:background="@drawable/play"
                    android:textAlignment="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/vediotime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/vediotitle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:layout_toEndOf="@+id/vedioicon"
                    android:text="Cell Injury"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@+id/vedioicon"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/vediotitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/vedioicon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toEndOf="@+id/vediotime"
                    android:layout_toRightOf="@+id/vediotime"
                    android:maxLines="1"
                    android:text="Basic Concepts"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_heading_text_size" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
