<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcqlayout_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:minHeight="30dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp7"
    android:paddingLeft="@dimen/dp5"
    android:paddingRight="@dimen/dp5"
    android:paddingTop="@dimen/dp7">

    <TextView
        android:id="@+id/optionIconTV"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        android:padding="@dimen/dp3"
        android:text="A."
        android:textSize="@dimen/sub_heading_text_size"
        android:layout_gravity="center_vertical"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz_options_bg_transparent"
        android:padding="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_gravity="center_vertical" >

        <com.utkarshnew.android.courses.Fragment.TestSeriesOptionWebView
            android:id="@+id/optionTextTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp3"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/correctLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/correctIV"
            android:layout_width="@dimen/dp30"
            android:layout_height="match_parent"
            android:padding="@dimen/dp7"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>