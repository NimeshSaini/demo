                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:text="@string/generalInstr"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading_text_size" />

                <TextView
                    android:id="@+id/generalInstrValueTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:ellipsize="end"

                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:textColor="@color/dullBlack"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal"
                android:padding="@dimen/dp5"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:ellipsize="end"

                    android:maxLines="1"
                    android:padding="@dimen/dp5"
                    android:text="@string/language"
                    android:textColor="@color/black"
                    android:textSize="@dimen/post_text_size" />

                <TextView
                    android:id="@+id/languageSpinnerTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_refcode_et"
                    android:drawableRight="@drawable/ibt_down_grey"
                    android:ellipsize="end"

                    android:gravity="start|center_vertical"
                    android:padding="@dimen/dp7"
                    android:text="@string/english"
                    android:textColor="@color/dullBlack"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:paddingLeft="@dimen/dp5"
                android:checked="true"
                android:paddingRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp15"
                android:text="@string/optingAttemptcheck"/>

            <TextView
                android:id="@+id/remarksTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:ellipsize="end"

                android:gravity="start|center_horizontal"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="@string/optingAttempt"
                android:textColor="@color/red"
                android:textSize="@dimen/extrasmall_text_size_10"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/startQuizBtn"
        style="@style/round_corner_button_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/start_test"
        android:textAllCaps="true" />

</RelativeLayout>
