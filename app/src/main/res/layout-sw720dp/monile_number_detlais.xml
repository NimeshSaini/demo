<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calcpagerl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_notes"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp15">


    <TextView
        android:id="@+id/add_coupoun_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp15"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_vertical"
        android:text="User Detail"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"

        android:layout_below="@id/add_coupoun_txt"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/square_placeholder"
        app:civ_border_color="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@drawable/border_edit_notes"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/dp18"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/user_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@drawable/border_edit_notes"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/dp18"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_mobile"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@drawable/border_edit_notes"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/dp18"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp20">

        <TextView
            android:id="@+id/btn__cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:background="@drawable/border_gray"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:background="@drawable/bg_signup_btn"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>